<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  version="3.0" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd">  
<enterprise-beans>
    <message-driven>
        <ejb-name>MessageDrivenEJB</ejb-name>
        <ejb-class>org.jboss.windup.example.MessageDrivenEJB</ejb-class>
        <transaction-type>Container</transaction-type>
        <message-destination-type>javax.jms.Queue</message-destination-type>     
        <activation-config>
            <activation-config-property>
                <activation-config-property-name>acknowledgeMode</activation-config-property-name>
                <activation-config-property-value>Auto-acknowledge</activation-config-property-value>
            </activation-config-property>             
            <activation-config-property>
                <activation-config-property-name>destinationType</activation-config-property-name>
                <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
            </activation-config-property>
        </activation-config>
    </message-driven>
    <message-driven>
        <ejb-name>NotificationEJB</ejb-name>
        <ejb-class>org.jboss.windup.example.NotificationEJB</ejb-class>
        <transaction-type>Container</transaction-type>
        <message-destination-type>javax.jms.Queue</message-destination-type>
        <resource-env-ref>  
            <resource-env-ref-name>jms/Queue</resource-env-ref-name>  
            <resource-env-ref-type>javax.jms.Queue</resource-env-ref-type> 
        </resource-env-ref> 
    </message-driven>
 
    <session>
        <display-name>Windup Bean</display-name>
        <ejb-name>WindupClientServiceBean</ejb-name>
        <local-home>org.jboss.windup.example.WindupBeanHome</local-home>
        <local>org.jboss.windup.example.WindupBean</local>
        <ejb-class>org.jboss.windup.example.WindupBeanImpl</ejb-class>
        <session-type>Stateless</session-type>
        <transaction-type>Container</transaction-type>
        <resource-ref>
            <res-ref-name>WorkManager</res-ref-name>
            <res-type>commonj.work.WorkManager</res-type>
            <res-auth>Container</res-auth>
             <res-sharing-scope>Shareable</res-sharing-scope>
        </resource-ref>
    </session>
    
    <session>
        <ejb-name>WindupGeneralServiceBean</ejb-name>
        <ejb-ref>
            <ejb-ref-name>ejb/WindupService</ejb-ref-name>
            <ejb-ref-type>Session</ejb-ref-type>
            <home>org.jboss.windup.example.WindupServiceHome</home>
            <remote>org.jboss.windup.example.WindupServiceRemote</remote>
            <mapped-name>windup-service-ear-2/WindupServiceBean/remote</mapped-name>
        </ejb-ref>
    </session>

    <session>
        <display-name>WindupMessage</display-name>
        <ejb-name>WindupMessage</ejb-name>
        <home>org.jboss.windup.example.bean.session.WindupMessageHome</home>
        <remote>org.jboss.windup.example.bean.session.WindupMessageRemote</remote>
        <local-home>org.jboss.windup.example.bean.session.WindupMessageLocalHome</local-home>
        <local>org.jboss.windup.example.bean.session.WindupMessageLocal</local>
        <ejb-class>org.jboss.windup.example.bean.session.WindupMessageBean</ejb-class>
        <session-type>Stateless</session-type>
        <transaction-type>Container</transaction-type>
        <env-entry>
            <description />
            <env-entry-name>constants/hubServerURL</env-entry-name>
            <env-entry-type>java.lang.String</env-entry-type>
            <env-entry-value>@hub.server.url@</env-entry-value>
        </env-entry>
        <env-entry>
            <description />
            <env-entry-name>constants/appID</env-entry-name>
            <env-entry-type>java.lang.String</env-entry-type>
            <env-entry-value>@hub.server.securityId@</env-entry-value>
        </env-entry>
        <security-identity>
            <run-as>
                <role-name>internal_system_user</role-name>
            </run-as>
        </security-identity> 
    </session>
    
    <session>
        <ejb-name>WindupEnvManager</ejb-name>
        <ejb-class>org.jboss.windup.example.WindupEnvManagerBean</ejb-class>
        <mapped-name>WindupEnvManager</mapped-name>
        <business-remote>org.jboss.windup.example.WindupEnvManagerBean</business-remote>
        <session-type>Stateless</session-type>
        <transaction-type>Container</transaction-type>
        <security-identity>
            <run-as>
                <role-name>internal_system_user</role-name>
            </run-as>
        </security-identity>
        <env-entry>
            <description>Determines if a Windup should connect to external</description>
            <env-entry-name>connectToExternal</env-entry-name>
            <env-entry-type>java.lang.Boolean</env-entry-type>
            <env-entry-value>true</env-entry-value>
        </env-entry>
    </session>
    
    <session>
        <display-name>WindupFacade</display-name>
        <ejb-name>WindupFacade</ejb-name>
        <home>org.jboss.windup.example.WindupFacadeHome</home>
        <remote>org.jboss.windup.example.WindupFacade</remote>
        <service-endpoint>org.jboss.windup.example.WindupFacadeBeanPortType</service-endpoint>
        <ejb-class>org.jboss.windup.example.WindupFacadeBean</ejb-class>
        <session-type>Stateless</session-type>
        <transaction-type>Container</transaction-type>
        <ejb-local-ref>
            <ejb-ref-name>ejb/windup</ejb-ref-name>
            <ejb-ref-type>Entity</ejb-ref-type>
            <local-home>org.jboss.windup.entity.WindupHome</local-home>
            <local>org.jboss.windup.entity.Windup</local>
            <ejb-link>Windup</ejb-link>
        </ejb-local-ref>
        <security-identity>
            <run-as>
                <role-name>internal_system_user</role-name>
            </run-as>
        </security-identity>
    </session>

    <entity>
        <display-name>Windup</display-name>
        <ejb-name>windup</ejb-name>
        <local-home>org.jboss.windup.entity.WindupHome</local-home>
        <local>org.jboss.windup.entity.Windup</local>
        <ejb-class>org.jboss.windup.entity.WindupBean</ejb-class>
        <persistence-type>Container</persistence-type>
        <prim-key-class>java.lang.Long</prim-key-class>
        <reentrant>false</reentrant>
        <cmp-version>2.x</cmp-version>
        <abstract-schema-name>Windup</abstract-schema-name>
        <cmp-field>
            <field-name>windupId</field-name>
        </cmp-field>
        <cmp-field>
            <field-name>windup</field-name>
        </cmp-field>
        <primkey-field>windupId</primkey-field>
            <query>
                <query-method>
                    <method-name>findByWindup</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>
                <![CDATA[select distinct object(c) from Windup as c where c.windup = ?1]]>
                </ejb-ql>
            </query>
            <query>
                <query-method>
                <method-name>findByMM</method-name>
                <method-params>
                    <method-param>java.math.BigDecimal</method-param>
                </method-params>
                </query-method>
            <ejb-ql>
            <![CDATA[select distinct object(c) from Windup as c, MmRef as mm where c.mmRefId = mm.mmRefId and mm.mmNum = ?1]]>
            </ejb-ql>
            </query>
        </entity>

    
</enterprise-beans>

<interceptors>
    <interceptor>
        <interceptor-class>
            org.jboss.seam.ejb.SeamInterceptor
        </interceptor-class>
    </interceptor>
    <interceptor>
        <interceptor-class>
            org.springframework.ejb.interceptor.SpringBeanAutowiringInterceptor
        </interceptor-class>
    </interceptor>
</interceptors>
    
<assembly-descriptor>

    <security-role>
        <role-name>internal_system_user</role-name>
    </security-role>    

    <container-transaction>
        <method>
            <ejb-name>MessageDrivenEJB</ejb-name>
            <method-name>*</method-name>
        </method>
        <trans-attribute>Required</trans-attribute>
    </container-transaction>

    <container-transaction>
        <method>
            <ejb-name>NotificationEJB</ejb-name>
            <method-name>onMessage()</method-name>
        </method>
        <trans-attribute>Required</trans-attribute>
    </container-transaction>
    
    <container-transaction>
        <method>
            <ejb-name>WindupMessage</ejb-name>
            <method-name>*</method-name>
            <method-params>
                <method-param>org.jboss.windup.example.bean.IncomingMessage</method-param>
            </method-params>
        </method>
        <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>

    <interceptor-binding>
        <ejb-name>*</ejb-name>
        <interceptor-class>
            org.jboss.seam.ejb.SeamInterceptor
        </interceptor-class>
    </interceptor-binding>
    <interceptor-binding>
        <ejb-name>*</ejb-name>
        <interceptor-class>
            org.springframework.ejb.interceptor.SpringBeanAutowiringInterceptor
        </interceptor-class>
    </interceptor-binding>
</assembly-descriptor>

<ejb-client-jar>ExtClient.jar</ejb-client-jar>
</ejb-jar>

